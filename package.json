{
  "name": "coral-pocket-core",
  "version": "2.1.4",
  "description": "Enterprise-grade Mobile-First AI Client built with Vanilla JS architectures.",
  "private": true,
  "author": "Coral Pocket Team",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0 --port 3000",
    "build": "cross-env NODE_ENV=production vite build && npm run build:css",
    "build:css": "tailwindcss -i ./src/assets/input.css -o ./dist/styles/main.css --minify",
    "test": "jest --config jest.config.js --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{js,html}' --fix",
    "format": "prettier --write 'src/**/*.{js,html,css}'",
    "prepare": "husky install",
    "deploy": "bash ./scripts/deploy.sh"
  },
  "dependencies": {
    "highlight.js": "^11.8.0",
    "marked": "^9.1.2",
    "dompurify": "^3.0.6",
    "lucide": "^0.290.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.16.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
